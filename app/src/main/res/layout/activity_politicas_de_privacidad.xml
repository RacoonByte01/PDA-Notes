<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliticasDePrivacidad">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTituloSeleccionarIdioma"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_margin="20sp"
                android:gravity="center"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/idiomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radioButtonEspano"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/espanol" />

                <RadioButton
                    android:id="@+id/radioButtonIngles"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:text="@string/ingles" />

                <RadioButton
                    android:id="@+id/radioButtonChino"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:text="@string/chino" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>